<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				xmlns:tools="http://schemas.android.com/tools"
				tools:ignore="ButtonStyle">

	<ImageButton
		android:id="@+id/im_icon_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/holo_blue_light"
		android:contentDescription="@string/bt_txt_device_location"
		android:src="@drawable/ic_office"
		android:onClick="onClick"/>

	<TextView
		android:id="@+id/txt_device_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_toEndOf="@+id/im_icon_am"
		android:text="@string/bt_txt_device_location"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<Button
		android:id="@+id/bt_auto_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:checked="true"
		android:onClick="onClick"
		android:text="@string/bt_txt_auto"
		android:visibility="visible"
		tools:ignore="RelativeOverlap"/>

	<View
		android:id="@+id/bt_auto_hl_am"
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_alignStart="@+id/bt_auto_am"
		android:layout_alignEnd="@+id/bt_auto_am"
		android:layout_below="@+id/bt_auto_am"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="1dp"
		android:layout_marginTop="-5dp"
		android:background="@android:color/holo_red_light"/>

	<View
		android:id="@+id/div_1_am"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@+id/bt_auto_hl_am"
		android:layout_marginTop="5dp"
		android:background="@android:color/darker_gray"/>

	<Button
		android:id="@+id/bt_on_off_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/div_1_am"
		android:checked="false"
		android:onClick="onClick"
		android:text="@string/bt_txt_power"/>

	<View
		android:id="@+id/bt_on_off_hl_am"
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_below="@+id/bt_on_off_am"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="1dp"
		android:layout_marginTop="-5dp"
		android:background="@android:color/holo_red_light"/>

	<View
		android:id="@+id/div_2_am"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@+id/bt_on_off_hl_am"
		android:layout_marginTop="5dp"
		android:background="@android:color/darker_gray"/>

	<TextView
		android:id="@+id/txt_func_bar_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/div_2_am"
		android:gravity="center_horizontal"
		android:text="@string/bt_txt_func_bar"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<LinearLayout
		android:id="@+id/bar_func_txt_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_func_bar_am"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_fanspeed"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/bar_func_btn_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bar_func_txt_am"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bt_fanspeed_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="false"
			android:onClick="onClick"
			android:text="@string/bt_txt_fan_high"/>

		<Button
			android:id="@+id/bt_sweep_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="false"
			android:onClick="onClick"
			android:text="@string/bt_txt_sweep"/>

		<Button
			android:id="@+id/bt_sleep_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="false"
			android:onClick="onClick"
			android:text="@string/bt_txt_sleep"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/bar_func_light_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bar_func_btn_am"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_marginTop="-5dp"
		android:orientation="horizontal">

		<View
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/darker_gray"
			android:visibility="invisible"/>

		<View
			android:id="@+id/bt_sweep_hl_am"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/darker_gray"/>

		<View
			android:id="@+id/bt_sleep_hl_am"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/holo_red_light"/>

	</LinearLayout>

	<View
		android:id="@+id/div_3_am"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@+id/bar_func_light_am"
		android:layout_marginTop="5dp"
		android:background="@android:color/darker_gray"/>

	<TextView
		android:id="@+id/txt_mode_bar_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/div_3_am"
		android:layout_centerHorizontal="true"
		android:text="@string/bt_txt_mode_bar"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<LinearLayout
		android:id="@+id/bar_mode_btn_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_mode_bar_am"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bt_autom_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="false"
			android:onClick="onClick"
			android:text="@string/bt_txt_auto"/>

		<Button
			android:id="@+id/bt_cool_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="false"
			android:onClick="onClick"
			android:text="@string/bt_txt_cool"/>

		<Button
			android:id="@+id/bt_dry_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="false"
			android:onClick="onClick"
			android:text="@string/bt_txt_dry"/>

		<Button
			android:id="@+id/bt_fan_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="true"
			android:onClick="onClick"
			android:text="@string/bt_txt_fan"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bar_mode_btn_am"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_marginTop="-5dp"
		android:orientation="horizontal">

		<View
			android:id="@+id/bt_autom_hl_am"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/darker_gray"/>

		<View
			android:id="@+id/bt_cool_hl_am"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/darker_gray"/>

		<View
			android:id="@+id/bt_dry_hl_am"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/holo_red_light"/>

		<View
			android:id="@+id/bt_fan_hl_am"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@android:color/holo_red_light"/>

	</LinearLayout>

	<View
		android:id="@+id/div_4_am"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@+id/bar_mode_btn_am"
		android:layout_marginTop="5dp"
		android:background="@android:color/darker_gray"/>

	<TextView
		android:id="@+id/txt_temp_bar_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/div_4_am"
		android:layout_centerHorizontal="true"
		android:text="@string/bt_txt_temp_bar"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<LinearLayout
		android:id="@+id/bar_temp_btn_am"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_temp_bar_am"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bt_plus_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:background="@android:color/holo_red_light"
			android:gravity="center_horizontal"
			android:onClick="onClick"
			android:text="@string/bt_txt_plus"
			android:textSize="30sp"
			android:textStyle="bold"
			tools:ignore="ButtonStyle"/>

		<Button
			android:id="@+id/bt_minus_am"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:background="@android:color/holo_blue_bright"
			android:gravity="center_horizontal"
			android:onClick="onClick"
			android:text="@string/bt_txt_minus"
			android:textSize="30sp"
			android:textStyle="bold"
			tools:ignore="ButtonStyle"/>

		<Button
			android:id="@+id/bt_timer_am"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:background="@android:color/holo_green_light"
			android:gravity="center"
			android:onClick="onClick"
			android:text="@string/bt_txt_hour"
			android:textStyle="bold"
			tools:ignore="ButtonStyle"
			/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="@string/bt_txt_plus"
			android:id="@+id/bt_timer_plus_am"
			android:layout_weight="0.1"
			android:onClick="onClick"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="@string/bt_txt_minus"
			android:id="@+id/bt_timer_minus_am"
			android:layout_weight="0.1"
			android:onClick="onClick"/>

	</LinearLayout>

	<TextView
		android:id="@+id/txt_cons_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bar_temp_btn_am"
		android:layout_marginTop="10dp"
		android:gravity="center_horizontal"
		android:text="@string/txt_consumption"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignTop="@+id/txt_cons_am"
		android:gravity="center_horizontal"
		android:text="@string/txt_cool_temp"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/txt_cons_val_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_cons_am"
		android:gravity="center_horizontal"
		android:text="@string/bt_next_txt"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/txt_temp_val_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="false"
		android:layout_alignParentEnd="true"
		android:layout_below="@+id/txt_cons_am"
		android:gravity="center_horizontal"
		android:text="@string/bt_next_txt"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/txt_auto_status_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/txt_cons_am"
		android:layout_centerHorizontal="true"
		android:gravity="center_horizontal"
		android:text="@string/txt_auto_status"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/txt_auto_status_val_am"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_auto_status_am"
		android:layout_centerHorizontal="true"
		android:gravity="center_horizontal"
		android:text="@string/bt_next_txt"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold"/>

</RelativeLayout>
